<section class="form">	
	<div class="wrapper320">	
		<h1 class="title mt50">Register</h1>

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  <fieldset>		
		    <!-- f.label :first_name -->
		  	<%= f.text_field :first_name, :placeholder => "Nombre" %>
		  </fieldset>	
			
		  <fieldset>		
		  	<%= f.text_field :last_name, :placeholder => "Apellido" %>
		  </fieldset>	
			
		  <fieldset>	
		  	<%= f.text_field :profile_name, :placeholder => "Usuario"%>
		  </fieldset>

		  <div class="upload">	
		  	<span class="icon-image"></span>
		  	Image de Perfil
		  	<%= f.file_field :picture, :placeholder => "Image Profile"%>
		  </div>

	      <fieldset>
		  	<%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
		  </fieldset>

		  <fieldset>	
		  	<%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
		  </fieldset>

		  <fieldset>	
		  	<%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Repeat password" %>
		  </fieldset>	

		  <div><%= f.submit "Ok" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</section>